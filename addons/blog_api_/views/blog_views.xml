<odoo>
  <!-- Blog Category Views -->
  <record id="view_blog_category_tree" model="ir.ui.view">
    <field name="name">blog.category.tree</field>
    <field name="model">blog.category</field>
    <field name="arch" type="xml">
      <list string="Blog Categories">
        <field name="name"/>
        <field name="post_ids" widget="one2many_list" invisible="1"/>
      </list>
    </field>
  </record>

  <record id="view_blog_category_form" model="ir.ui.view">
    <field name="name">blog.category.form</field>
    <field name="model">blog.category</field>
    <field name="arch" type="xml">
      <form string="Blog Category">
        <sheet>
          <group>
            <field name="name"/>
            <field name="post_ids" nolabel="1">
              <list editable="bottom">
                <field name="title"/>
                <field name="date"/>
                <field name="published"/>
              </list>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Blog Post Views -->
  <record id="view_blog_post_tree" model="ir.ui.view">
    <field name="name">blog.post.tree</field>
    <field name="model">blog.post</field>
    <field name="arch" type="xml">
      <list string="Blog Posts">
        <field name="title"/>
        <field name="category_id"/>
        <field name="author_name"/>
        <field name="date"/>
        <field name="published"/>
      </list>
    </field>
  </record>

  <record id="view_blog_post_form" model="ir.ui.view">
    <field name="name">blog.post.form</field>
    <field name="model">blog.post</field>
    <field name="arch" type="xml">
      <form string="Blog Post">
        <sheet>
          <group>
            <field name="title"/>
            <field name="slug"/>
            <field name="date"/>
            <field name="author_name"/>
            <field name="category_id"/>
            <field name="published"/>
          </group>
          <notebook>
            <page string="Content">
              <field name="content" widget="html" placeholder="Write post content here..."/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Actions -->
  <record id="action_blog_post" model="ir.actions.act_window">
    <field name="name">Blog Posts</field>
    <field name="res_model">blog.post</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create your first blog post</p>
    </field>
  </record>

  <record id="action_blog_category" model="ir.actions.act_window">
    <field name="name">Blog Categories</field>
    <field name="res_model">blog.category</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menus -->
  <menuitem id="menu_blog_root" name="Blog" sequence="50"/>
  <menuitem id="menu_blog_posts" name="Posts" parent="menu_blog_root" action="action_blog_post" sequence="10"/>
  <menuitem id="menu_blog_categories" name="Categories" parent="menu_blog_root" action="action_blog_category" sequence="20"/>

</odoo>
